{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["src", "tests", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
